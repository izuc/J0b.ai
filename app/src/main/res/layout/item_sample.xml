<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/bg_item2"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/card_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_10dp"
                android:backgroundTint="#5ac5f3"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_108sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/sample" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text"
                style="@style/poppins_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_color"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/academic"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>